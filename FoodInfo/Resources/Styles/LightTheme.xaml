<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodInfo.LightTheme">
    <Style x:Key="PageStyle" TargetType="Page">
        <Setter x:Name="PageBackground" Property="Background" Value="Lightblue"/>
    </Style>
    <Style x:Key="LabelPrimary" TargetType="Label" >
        <Setter x:Name="TextColorPrimary" Property="TextColor" Value="DarkBlue"/>
    </Style>
    <Color x:Key="PrimaryColor">LightBlue</Color>
    <Color x:Key="SecondaryColor">DarkBlue</Color>
</ResourceDictionary>