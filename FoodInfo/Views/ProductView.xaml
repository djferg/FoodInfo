<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodInfo.Views.ProductView"
             Style="{DynamicResource PageStyle}"
             xmlns:vm="clr-namespace:FoodInfo.Models"
             x:DataType="vm:ProductModel"
             Title="Product Details">
    <TableView Intent="Data">
        <TableRoot>
            <TableSection Title="Key Details">
                <TextCell Text="Code" Detail="{Binding Barcode}" />
                <TextCell Text="Name" Detail="{Binding Name}" />
                <ImageCell Text="Image" ImageSource="{Binding ImageUrl}" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>